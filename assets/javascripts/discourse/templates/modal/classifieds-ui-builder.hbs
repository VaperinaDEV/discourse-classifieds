{{/d-modal-body}}

<div class="modal-footer">
  {{d-button
    action=(action "createListing")
    icon="plus"
    class="btn-primary"
    label="discourse_classifieds.ui_builder.create"
    disabled=disableInsert
  }}

  {{d-button
    label="cancel"
    class="btn-flat"
    action=(action "cancelListingCreation")
  }}
</div>
